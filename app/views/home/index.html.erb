                <h6>económicas</h6>
                <ul>
                  <li><%= @polygon.econ_act %></li>
                </ul>
              </div>
            </div>
          </div>
          <div class="item pl">
            <h4>eventos</h4>
            <div class="ico">
              <img src="images/ico_m_2.png" alt="">
