                <td nowrap><%= number_with_delimiter(@polygon.cero_doce) %></td>
                <td nowrap><%= number_with_delimiter(@polygon.doce_catorce) %></td>
                <td nowrap><%= number_with_delimiter(@polygon.quince_diecinueve) %></td>
                <td nowrap><%= number_with_delimiter(@polygon.veinte_veinticuatro) %></td>
                <td nowrap><%= number_with_delimiter(@polygon.veinticinco_veintinueve) %></td>
                <td nowrap><%= number_with_delimiter(@polygon.treinta_cincuentainueve) %></td>
                <td nowrap><%= number_with_delimiter(@polygon.sesenta) %></td>
              </tr>
            </table>
          </div>
        </div>
        <div class="item">
          <h4>Nivel Socioeconomico</h4>
          <h5><%= @polygon.ses %></h5>
          <p>(Prom.)</p>
        </div>
        <div class="item">
          <h4>escolaridad</h4>
          <h5><%= @polygon.scholarity %></h5>
          <p>(Prom.)</p>
        </div>
        <div class="set nos">
          <div class="item">
            <h4>Economía</h4>
            <div class="ico">
              <img src="images/ico_m_1.png" alt="">
              <!-- <div class="count rr">7</div> -->
            </div>
            <p style="margin-top: 10px;"><a href="#">Actividades</a></p>
            <div class="more-info">
              <a href="#" class="close"></a>
              <h3>Principales Actividades</h3>
              <div class="content">
