                      </li>
                    <% end %>
                  </ul>
                  <h6>Futuros</h6>
                  <ul class="ruta-ul">
                    <% @polygon.tours.where("created_at >= '#{Date.today}'").each do |tour|%>
                      <style>
                        #ruta_<%= tour.id %>:before {
                            color: <%=tour.colors || "white"%>; /* or whatever color you prefer */
                        }
                      </style>
                      <li id="ruta_<%=tour.id%>" class="ruta-color" onclick="$(this).toggleClass(&quot;act&quot;)">
                        <label for="ruta_<%= tour.id %>_checkbox">
                          <%= tour.name %>
                          <input type="checkbox" class="ruta-checkbox" id="ruta_<%= tour.id %>_checkbox" autocomplete="off">
                        </label>
                        <span class="glyphicon glyphicon-info-sign" style="margin-left: 15px;" id="info_<%= tour.id %>" onclick="$(&quot;.info-<%= tour.id %>&quot;).show()"></span>
                      </li>
                    <% end %>
                  </ul>
                </div>
          </div>
        </div>
        <div class="item pl" style="position:relative">
          <h4>transporte</h4>
          <div class="ico">
            <img src="images/ico_m_4.png" alt="">
            <div class="count rr"><%= @polygon.rutas.split(",").count %></div>
          </div>
          <p style="margin-top: 10px;"><a href="#">Rutas</a></p>
          <div class="more-info-rutas">
              <a href="#" class="close"></a>
              <h3>Rutas</h3>
              <div class="content">
                <ul>
                  <% @polygon.rutas.split(",").each do |ruta|%>
                    <li><%= ruta %></li>
                  <% end %>
                </ul>

              </div>
          </div>
        </div>
