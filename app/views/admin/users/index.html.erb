<div class="page-head">

        <h2 class="pull-left">Usarios</h2>
        <div class="pull-right">
          <a class="btn btn-primary btn-add-polygon" href="/admin/users/new">Crear Nuevo Usario</a>
        </div>
        <div class="clearfix"></div>
        <!-- Breadcrumb -->
        <div class="bread-crumb">
          <a href="index.html"><i class="fa fa-home"></i> Inicio</a>
          <!-- Divider -->
          <span class="divider">/</span>
          <a href="#" class="bread-current">Usarios</a>
        </div>

        <div class="clearfix"></div>
      </div>
      <div class="matter">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <div class="widget">
                <div class="widget-head">
                  <div class="pull-left">Usarios</div>
                  <div class="widget-icons pull-right">
                    <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                  </div>
                  <div class="clearfix"></div>
                </div>
                <div class="widget-content">
                  <table id="datatable" class="table table-striped table-bordered table-hover">
                    <thead>
                      <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Tipo</th>
                        <th>Facebook</th>
                        <th>Twitter</th>
                        <th class="text-center">Control</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for user in @users %>
                        <tr>
                          <td><%= user.id %></td>
                          <td><%= user.username %></td>
                          <td><%= user.email %></td>
                          <td><%= user.user_type.try(:name) %></td>
                          <td><a href="#"><i class="fa fa-facebook-square"></i></a></td>
                          <td><a href="#"><i class="fa fa-twitter-square"></i></a></td>
                          <td class="text-center">
                            <%= link_to edit_admin_user_path(user), class: "btn btn-xs btn-primary" do %>
                              <i class="fa fa-pencil"></i> Editar
                            <% end %>
                            <%= link_to [:admin, user], :confirm => 'Are you sure?', :method => :delete, class: "btn btn-xs btn-danger" do %>
                              <i class="fa fa-times"></i> Borrar
                            <% end %>
                          </td>
                        </tr>
                      <% end %>

                    </tbody>
                  </table>
                  <div class="widget-foot">
                    <br><br>
                    <div class="clearfix"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>