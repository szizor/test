<div class="page-head">

  <h2 class="pull-left">Eventos</h2>
  <div class="pull-right">
    <a class="btn btn-primary btn-add-polygon" href="/admin/events/new">Crear Nuevo Problema</a>
  </div>
  <div class="clearfix"></div>
  <!-- Breadcrumb -->
  <div class="bread-crumb">
    <a href="/admin/dashboard"><i class="fa fa-home"></i> Inicio</a>
    <!-- Divider -->
    <span class="divider">/</span>
    <a href="#" class="bread-current">Eventos</a>
  </div>

  <div class="clearfix"></div>
</div>
<div class="matter">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="widget">
          <div class="widget-head">
            <div class="pull-left">Listado de Eventos</div>
            <div class="widget-icons pull-right">
              <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="widget-content">
            <div class="table-responsive">
              <table id="datatable" class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Description</th>
                    <th class="text-center" colspan="2">Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% for event in @events %>
                    <tr>
                      <td><%= event.name %></td>
                      <td nowrap><%= event.start_date.strftime("%d de %b") %></td>
                      <td nowrap><%= event.end_date.strftime("%d de %b") %></td>
                      <td><%= truncate(event.description, :length => 110)%></td>
                      <td><%= link_to "Edit", edit_admin_event_path(event) %></td>
                      <td><%= link_to "Destroy", [:admin, event], :confirm => 'Are you sure?', :method => :delete %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <div class="widget-foot">
              <br><br>
              <div class="clearfix"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

