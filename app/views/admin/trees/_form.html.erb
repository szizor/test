<%= form_for [:admin, :polygon, @tree], :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :polygon_id %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :file %>
    <%= f.file_field :file %>
  </div>
  <div class="form-group">
    <%= f.label :visible, "Visible a" %>
    <%= f.select :visible, ['Publico', 'Capacitador'], {:class => "form-control"} %>
  </div>
  <div class="form-group"><%= f.submit  "Guardar", :class => 'btn btn-success' %></div>
<% end %>
