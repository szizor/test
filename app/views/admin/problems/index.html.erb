<div class="page-head">

  <h2 class="pull-left">Problemas</h2>
  <div class="pull-right">
    <a class="btn btn-primary btn-add-polygon" href="/admin/problems/new">Crear Nuevo Problema</a>
  </div>
  <div class="clearfix"></div>
  <!-- Breadcrumb -->
  <div class="bread-crumb">
    <a href="/admin/dashboard"><i class="fa fa-home"></i> Inicio</a>
    <!-- Divider -->
    <span class="divider">/</span>
    <a href="#" class="bread-current">Problemas</a>
  </div>

  <div class="clearfix"></div>
</div>
<div class="matter">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="widget">
          <div class="widget-head">
            <div class="pull-left">Listado de Problemas</div>
            <div class="widget-icons pull-right">
              <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="widget-content">
            <div class="table-responsive">
              <table id="datatable" class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th>Nombre</th>
                    <th>Polígono</th>
                    <th>Categoría</th>
                    <th>Frecuencia del problema</th>
                    <th>Soluciónes</th>
                    <th class="text-center">Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% for problem in @problems %>
                    <tr>
                      <td><%= problem.name %></td>
                      <td><%= problem.polygon.try(:name) %></td>
                      <td><%= problem.category.try(:name) %></td>
                      <td><%= problem.frecuency %></td>
                      <!-- TODO -->
                      <td>4</td>
                      <td><%= link_to "Edit", edit_admin_problem_path(problem) %></td>
                      <td><%= link_to "Destroy", [:admin, problem], :confirm => 'Are you sure?', :method => :delete %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <div class="widget-foot">
              <br><br>
              <div class="clearfix"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

