<%= form_for [:admin, :polygon, @image], :html => {:multipart => true} do |f| %>
  <div class="row">
    <% if @image.errors.any? %>
      <div class="alert alert-danger">
        <strong><%= pluralize(@image.errors.count, "Error") %></strong> prohibieron a este imagen guardar la informaci√≥n!
        <ul>
          <% @image.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :polygon_id %>
    <%= f.file_field :image, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :remote_image_url, "or image URL" %><br />
    <%= f.text_field :remote_image_url, :class => "form-control" %>
  </div>
  <p><%= f.submit  "Guardar", :class => 'btn btn-success' %></p>
<% end %>
