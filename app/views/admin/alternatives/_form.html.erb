
    <div class="row">
      <div class="col-md-12">
        <%= form_for [:admin, :polygon, :problem, @alternative] do |f| %>
        <%= f.hidden_field :problem_id, :value => params[:problem_id] %>
        <%= f.hidden_field :polygon_id, :value => params[:polygon_id] %>
          <div class="widget">
            <div class="widget-head">
              <div class="pull-left">Informacion Basica de la Alternativa</div>
              <div class="widget-icons pull-right">
                <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
              </div>
              <div class="clearfix"></div>
            </div>
            <div class="widget-content">
              <div class="padd">
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :name, "Titlo" %>
                      <%= f.text_field :name, :class => "form-control input-lg", :placeholder => "Titlo" %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                     <%= f.label :category_id, "Categoria de la Alternativa" %>
                    <%= f.grouped_collection_select(:category_id, ParentCategory.all, :categories, :name, :id, :name, { :include_blank => "Selecciona..." }, {:class => "form-control", :required=>"required"} ) %>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label :description, "Descripción de las acciones principales" %>
                  <%= f.text_area(:description, rows: 5, class: 'form-control', placeholder: "Descripción de las acciones principales") %>
                </div>
              </div>
              <div class="widget-foot text-center">
                <%= f.submit "Guardar", :class => 'btn btn-success' %>
                <div class="clearfix"></div>
              </div>
            </div>
          </div>
          <div class="widget">
            <div class="widget-head">
              <div class="pull-left">Características del Proyecto</div>
              <div class="widget-icons pull-right">
                <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
              </div>
              <div class="clearfix"></div>
            </div>
            <div class="widget-content">
              <div class="padd">

                  <h4>Información de la Matriz</h4>

                  <div class="row">
                    <div class="col-md-4">
                      <div class="form-group">
                        <%= f.label :end, "Fin (Aportacion a la estrategia)" %>
                        <%= f.text_field :end, :class => "form-control input-lg", :placeholder => "Aportacion a la estrategia sectorial o nacional" %>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="form-group">
                        <%= f.label :porpuse, "Proposito(objetivo general)" %>
                        <%= f.text_field :porpuse, :class => "form-control input-lg", :placeholder => "objetivo general" %>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="form-group">
                        <%= f.label :components, "Componentes(objetivos específicos)" %>
                        <%= f.text_field :components, :class => "form-control input-lg", :placeholder => "objetivos específicos" %>
                      </div>
                    </div>
                  </div>
                  
                  <h4>Fuentes de financiamiento </h4>

                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= f.label :fin_name, "Nombre" %>
                        <%= f.text_field :fin_name, :class => "form-control input-lg", :placeholder => "Nombre" %>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= f.label :fin_tel, "Telefono" %>
                        <%= f.text_field :fin_tel, :class => "form-control input-lg", :placeholder => "Telefono" %>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= f.label :fin_mail, "Email" %>
                        <%= f.text_field :fin_mail, :class => "form-control input-lg", :placeholder => "Email" %>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= f.label :fin_web, "Webpage" %>
                        <%= f.text_field :fin_web, :class => "form-control input-lg", :placeholder => "Webpage" %>
                      </div>
                    </div>
                  </div>

                  <h4>Presupuesto</h4>


                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= f.label :budget_expected, "Presupuesto contemplado" %>
                        <%= f.text_field :budget_expected, :class => "form-control input-lg", :placeholder => "Presupuesto contemplado" %>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= f.label :assigned_budget, "Presupuesto asignado" %>
                        <%= f.text_field :assigned_budget, :class => "form-control input-lg", :placeholder => "Presupuesto asignado" %>
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= f.label :budget_expected_pdf, "Desglose del presupuesto" %>
                        <%= f.file_field :budget_expected_pdf, :class => "form-control input-lg", :placeholder => "Desglose del presupuesto" %>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= f.label :assigned_budget, "Desglose del presupuesto" %>
                        <%= f.file_field :assigned_budget_pdf, :class => "form-control input-lg", :placeholder => "Desglose del presupuesto" %>
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= f.label :group_benefited, "Grupo de edad beneficiado" %>
                        <%= f.text_field :group_benefited, :class => "form-control input-lg", :placeholder => "Grupo de edad beneficiado" %>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= f.label :quantity_benefited, "Cantidad de la Población beneficiaria" %>
                        <%= f.text_field :quantity_benefited, :class => "form-control input-lg", :placeholder => "Cantidad de la Población beneficiaria" %>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= f.label :start_date, "Fecha de inicio" %>
                        <div id="datetimepicker1" class="input-append">
                          <% date = @alternative.start_date.present? ? @alternative.start_date.strftime("%Y-%m-%d") : ""%>
                          <%= f.text_field :start_date, :class => "form-control dtpicker", :placeholder => "Fecha de inicio", :"data-format"=>"yyyy-MM-dd", :value => date %>
                          <span class="add-on">
                            <i data-time-icon="fa fa-time" data-date-icon="fa fa-calendar" class="btn btn-info"></i>
                          </span>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= f.label :end_date, "Fecha de término estimada" %>
                        <div id="datetimepicker2" class="input-append">
                          <% date_end = @alternative.end_date.present? ? @alternative.end_date.strftime("%Y-%m-%d") : ""%>
                          <%= f.text_field :end_date, :class => "form-control dtpicker", :placeholder => "Fecha de término estimada", :"data-format"=>"yyyy-MM-dd", :value => date_end %>
                          <span class="add-on">
                            <i data-time-icon="fa fa-time" data-date-icon="fa fa-calendar" class="btn btn-info"></i>
                          </span>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= f.label :crono, "Cronograma" %>
                        <%= f.file_field :crono, :class => "form-control input-lg", :placeholder => "Cronograma" %>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= f.label :resume, "Resumen ejecutivo" %>
                        <%= f.file_field :resume, :class => "form-control input-lg", :placeholder => "Resumen ejecutivo" %>
                      </div>
                    </div>
                  </div>

                  <h4>La institución responsable de implementar el proyecto</h4>

                  <div class="form-group">
                    <label for="">Actor Principal</label>
                    <!-- Actores en el mismo Municipio -->
                    <%= f.select(:actor_id, Actor.all.collect {|p| [ p.name, p.id ] }, { include_blank: "-- Selecciona" }, {:class => "form-control"} ) %>
                  </div>

                  <h4>Actores Relacionados</h4>

                  <div class="row">
                    <div class="col-md-6">
                      <ol class="form-inline">
                        <%= hidden_field_tag "alternative[actor_ids][]", nil %>
                        <% Actor.all.each do |actor| %>
                          <%= check_box_tag "alternative[actor_ids][]", actor.id, @alternative.actor_ids.include?(actor.id), id: dom_id(actor) %>
                          <%= label_tag dom_id(actor), actor.name %><br>
                        <% end %>
                      </ol>
                    </div>
                  </div>

              </div>
              <div class="widget-foot text-center">
                <%= f.submit "Guardar como proyecto", :class => 'btn btn-success' %>
                <div class="clearfix"></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  
<script>
  $(function() {
    $('form').on('click', '.add_fields', function(event) {
      var regexp, time;
      time = new Date().getTime();
      regexp = new RegExp($(this).data('id'), 'g');
      $(this).before($(this).data('fields').replace(regexp, time));
      return event.preventDefault();
    });
  });  
</script>
