        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= f.label :coordinates, "Coordenadas" %>
            <%= f.text_area(:coordinates, rows: 5, class: 'form-control', placeholder: "Coordenadas") %>
          </div>
        </div>
      </div>
      <div class="row">  
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :start_date, "Fecha" %>
            <%= f.datetime_select :start_date, :class => "form-control" %>
