<div class="page-head">
  <h2 class="pull-left">Recorridos</h2>
  <div class="pull-right">
    <a class="btn btn-primary btn-add-polygon" href="/admin/tours/new">Crear Nuevo Recorrido</a>
  </div>
  <div class="clearfix"></div>
  <!-- Breadcrumb -->
  <div class="bread-crumb">
    <a href="/admin/dashboard"><i class="fa fa-home"></i> Inicio</a>
    <!-- Divider -->
    <span class="divider">/</span>
    <a href="#" class="bread-current">Recorridos</a>
  </div>

  <div class="clearfix"></div>
</div>
<div class="matter">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="widget">
          <div class="widget-head">
            <div class="pull-left">Recorridos</div>
            <div class="widget-icons pull-right">
              <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="widget-content">
            <table id="datatable" class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Nombre</th>
                  <th>Poligno</th>
                  <th>Fecha</th>
                  <th class="text-center">Status</th>
                  <th class="text-center">Control</th>
                </tr>
              </thead>
              <tbody>
                <% for tour in @tours %>
                  <tr>
                    <td><%= tour.name %></td>
                    <td><%= tour.polygon.name %></td>
                    <td><%= tour.start_date %></td>
                    <td><%= link_to "Edit", edit_admin_tour_path(tour) %></td>
                    <td><%= link_to "Destroy", [:admin, tour], :confirm => 'Are you sure?', :method => :delete %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <div class="widget-foot">
              <br><br>
              <div class="clearfix"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
