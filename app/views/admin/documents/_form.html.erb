<%= form_for [:admin, :polygon, @document], :html => {:multipart => true} do |f| %>
  <div class="row">
  <% if @document.errors.any? %>
    <div class="alert alert-danger">
      <strong><%= pluralize(@document.errors.count, "Error") %></strong> prohibieron a este Documento guardar la informaci√≥n!
      <ul>
        <% @document.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
  <%= f.hidden_field :polygon_id %>
  <div class="form-group">
    <%= f.label :name, "Nombre" %>
    <%= f.text_field :name, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :file, "Archivo" %>
    <i>El sistema solo acepta archivos tipo PDF, JPG o PNG</i>
    <%= f.file_field :file, :class => "form-control" %>
    <%= @document.file.file.filename if @document.file.present? %>
  </div>

  <div class="form-group">
    <%= f.label :visoble, "Visible a" %>
    <%= f.select :visible, ['Publico', 'Admin'], {:class => "form-control"} %>
  </div>
  <p><%= f.submit  "Guardar", :class => 'btn btn-success' %></p>
<% end %>
