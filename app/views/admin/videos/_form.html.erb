<%= form_for [:admin, :polygon, @video], :html => {:multipart => true} do |f| %>
  <div class="row">
    <% if @video.errors.any? %>
      <div class="alert alert-danger">
        <strong><%= pluralize(@video.errors.count, "Error") %></strong> prohibieron a este video guardar la información!
        <ul>
          <% @video.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <%= f.hidden_field :polygon_id %>
  <div class="form-group">
    <%= f.label :name, "Nombre" %>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :url, "Ruta" %>
    <%= f.text_field :url, :class => "form-control", :placeholder => "Colocar la url del video" %>
  </div>

  <div class="form-group">
    <%= f.label :visible, "Tipo" %>
    <%= f.select :visible, ['Actor', 'Problema', 'Solución'], {:class => "form-control"} %>
  </div>
  <p><%= f.submit  "Guardar", :class => 'btn btn-success' %></p>
<% end %>
