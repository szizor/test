<%= form_for [:admin, :polygon, @video], :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :polygon_id %>
  <div class="form-group">
    <%= f.label :name, "Nombre" %>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :url, "Ruta" %>
    <%= f.text_field :url, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :visible, "Tipo" %>
    <%= f.select :visible, ['Actor', 'Problema', 'Alternativa'], {:include_blank => "-- Selecciona"}, {:class => "form-control"} %>
  </div>
  <p><%= f.submit  "Guardar", :class => 'btn btn-success' %></p>
<% end %>
