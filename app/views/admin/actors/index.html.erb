<div class="page-head">
  <h2 class="pull-left">Actores</h2>
  <div class="pull-right">
    <a class="btn btn-primary btn-add-polygon" href="/admin/actors/new">Crear Nuevo Actore</a>
  </div>
  <div class="clearfix"></div>
  <!-- Breadcrumb -->
  <div class="bread-crumb">
    <a href="/admin/dashboard"><i class="fa fa-home"></i> Inicio</a>
    <!-- Divider -->
    <span class="divider">/</span>
    <a href="#" class="bread-current">Actores</a>
  </div>
  <div class="clearfix"></div>
</div>
<div class="matter">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="widget">
          <div class="widget-head">
            <div class="pull-left">Listado de Actores</div>
            <div class="widget-icons pull-right">
              <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="widget-content">
            <div class="table-responsive">
              <table id="datatable" class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th>Nombre</th>
                    <th>Direccion</th>
                    <th>Facebook</th>
                    <th>Twitter</th>
                    <th class="text-center">Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% for actor in @actors %>
                    <tr>
                      <td><%= actor.name %></td>
                      <td><%= actor.address %></td>
                      <td><%= actor.facebook %></td>
                      <td><%= actor.twitter %></td>
                      <td><%= link_to "Edit", edit_admin_actor_path(actor) %></td>
                      <td><%= link_to "Destroy", [:admin, actor], :confirm => 'Are you sure?', :method => :delete %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <div class="widget-foot">
              <br><br>
              <div class="clearfix"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
