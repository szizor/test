<div class="page-header">
  <h1>Listado de usuarios</h1>
</div>

<table class="table table-hover table-striped">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Movil</th>
    <th>Municipio</th>
    <th class="text-center">Acciones</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.movil %></td>
      <td><%= user.municipio %></td>
      <td class="text-center"><%= link_to 'Editar', edit_user_path(user), :class => 'btn btn-primary' %>  <%= link_to 'Borrar Usuario', user, :class => 'btn btn-danger', :confirm => 'Estas Seguro?', :method => :delete %></td>
    </tr>
  <% end %>
</table>